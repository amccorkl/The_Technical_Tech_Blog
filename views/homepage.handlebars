  {{#each posts as |post| }}
  <div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
          <a href="/posts/{{post.id}}">{{post.title}}</a>
        </h2>
        <h3>
          Posted by {{post.user.username}} on {{format_date post.createdAt}}
        </h3>
      </div>
        <p class="post-body">
          {{post.content}}
        </p>
      <div class="post-footer">
        <p>
          {{post.comments.length}} Comments
        </p>
        <a href="/posts/{{post.id}}">View Post</a>
      </div>
    </article>
  {{/each}}
